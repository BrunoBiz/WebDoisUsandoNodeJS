<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preparo</th>
            <th scope="col">Ingredientes</th>
            <th scope="col">Imagem</th>
            <th scope="col">Categoria</th>
            {{#if admin}}
            <th scope="col">Editar</th>
            <th scope="col">Deletar</th>
            {{/if}}
        </tr>
    </thead>
    {{#each receitas}}
    <tr>
        <th scope="row">{{nome}}</th>
        <td>{{preparo}}</td>
        <td>{{ingredientes}}</td>
        <td>
            <image width="50px" height="50px" src="uploads/{{imagem}}">
        </td>
        <td>{{categoriaId}}</td>
        {{#if ../admin}}
        <td><a href="receitaUpdate/{{id}}">Editar</a></td>
        <td><a href="receitaDelete/{{id}}">Deletar</a></td>
        {{/if}}
    </tr>
    {{/each}}
</table>